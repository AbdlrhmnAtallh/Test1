@model Toy

<head>
	<link rel="stylesheet" href="~/css/Cards.css">
</head>
<div id="container">

	<!-- Start	Product details -->
	<div class="product-details">

		<!-- 	Product Name -->
		<h1>@Model.Name</h1>
		<!-- 		<span class="hint new">New</span> -->
		<!-- 		<span class="hint free-shipping">Free Shipping</span> -->
		<!-- 		the Product rating -->
		<span class="hint-star star">
			<i class="fa fa-star" aria-hidden="true"></i>
			<i class="fa fa-star" aria-hidden="true"></i>
			<i class="fa fa-star" aria-hidden="true"></i>
			<i class="fa fa-star-half-o" aria-hidden="true"></i>
			<i class="fa fa-star-o" aria-hidden="true"></i>
		</span>


		<!-- The most important information about the product -->
		<p class="information">" @Model.Discription"</p>



		<!-- 		Control -->
		<div class="control">

			<!-- Start Button buying -->
			<a asp-controller="Order" asp-action="Buy" asp-route-id="@Model.Id" class="btn">
				<!-- 		the Price -->
				<span class="price">@Model.Price $</span>
				<!-- 		shopping cart icon-->
				<span class="shopping-cart"><i class="fa fa-shopping-cart" aria-hidden="true"></i></span>
				<!-- 		Buy Now / ADD to Cart-->
				<span class="buy">Buy Now</span>
			</a>
			
			<!-- End Button buying -->

		</div>

	</div>

	<!-- 	End	Product details   -->
	<!-- 	Start product image & Information -->

	<div class="product-image">

		<img src="~/images/@Model.ImageFileName" alt="Toy Image" />

		<!-- 	product Information-->
		<div class="info">
			<h2>The Description</h2>
			<ul>
				<li><strong>Gender: </strong>@Model.GenderFor</li>
				<li><strong>Available: </strong>@Model.InStock</li>
				<li><strong>Zones: </strong>9 - 11</li>
				
			</ul>
		</div>
	</div>
	<!--  End product image  -->


</div>


